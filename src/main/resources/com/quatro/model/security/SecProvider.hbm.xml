<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	<!-- 
    author JZhang
-->
<hibernate-mapping>
    <class name="com.quatro.model.security.SecProvider" table="provider">
        <id name="providerNo" type="java.lang.String">
            <column name="provider_no" length="6" />
            <generator class="native" />
        </id>
        <property name="lastName" type="java.lang.String">
            <column name="last_name" length="30" />
        </property>
        <property name="firstName" type="java.lang.String">
            <column name="first_name" length="30" />
        </property>
        <property name="providerType" type="java.lang.String">
            <column name="provider_type" length="15" />
        </property>
        <property name="specialty" type="java.lang.String">
            <column name="specialty" length="20" />
        </property>
        <property name="team" type="java.lang.String">
            <column name="team" length="20" />
        </property>
        <property name="sex" type="java.lang.String">
            <column name="sex" length="1" />
        </property>
        <property name="dob" type="java.util.Date">
            <column name="dob" length="10" />
        </property>
        <property name="address" type="java.lang.String">
            <column name="address" length="40" />
        </property>
        <property name="phone" type="java.lang.String">
            <column name="phone" length="20" />
        </property>
        <property name="workPhone" type="java.lang.String">
            <column name="work_phone" length="50" />
        </property>
        <property name="ohipNo" type="java.lang.String">
            <column name="ohip_no" length="20" />
        </property>
        <property name="rmaNo" type="java.lang.String">
            <column name="rma_no" length="20" />
        </property>
        <property name="billingNo" type="java.lang.String">
            <column name="billing_no" length="20" />
        </property>
        <property name="hsoNo" type="java.lang.String">
            <column name="hso_no" length="10" />
        </property>
        <property name="status" type="java.lang.String">
            <column name="status" length="1" />
        </property>
        <property name="comments" type="java.lang.String">
            <column name="comments" length="4000" />
        </property>
        <property name="providerActivity" type="java.lang.String">
            <column name="provider_activity" length="3" />
        </property>
        
        <property name="init" type="java.lang.String">
            <column name="init" length="10" />
        </property>
        <property name="title" type="java.lang.String">
            <column name="title" length="20" />
        </property>
        <property name="jobTitle" type="java.lang.String">
            <column name="job_title" length="100" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" length="320" />
        </property>
        
    </class>
</hibernate-mapping>
